<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/easy_swip_ml"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:background="@drawable/rounded_bg_shape"
    app:contentView="@+id/content"
    app:rightMenuView="@+id/right">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX健身中心"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广东省广州市白云区"
                android:textColor="@color/hint_text_color"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/list_in" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="80dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_delete_bg_shape"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>
</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>