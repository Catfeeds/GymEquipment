<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/running_record" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_run_total_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户外跑步4公里"
                android:textColor="#FF323232"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_start_run_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="21:57"
                android:textColor="#FF999999"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_run_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/they_count"
                android:drawablePadding="5dp"
                android:text="5000"
                android:textColor="#FF666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_running_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/when1"
                android:drawablePadding="5dp"
                android:text="00:30:03"
                android:textColor="#FF666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_speed_distribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/speed"
                android:drawablePadding="5dp"
                android:text="08′08′′"
                android:textColor="#FF666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_consume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/calories"
                android:drawablePadding="5dp"
                android:text="280"
                android:textColor="#FF666666"
                android:textSize="12sp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="2"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
