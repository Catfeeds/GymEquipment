<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".run.ui.RunHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_day_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_day_drawable"
            android:gravity="center"
            android:text="@string/day"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_week_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_week_drawable"
            android:gravity="center"
            android:text="@string/week"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_month_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_month_drawable"
            android:gravity="center"
            android:text="@string/month"
            android:textSize="13sp" />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/history_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp" />

</LinearLayout>