<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white_bg"
    android:orientation="vertical"
    tools:context=".run.ui.AddBroadcastActivity">

    <RelativeLayout
        android:id="@+id/rl_mac"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/add_broadcast_id"
            android:textColor="#FF323232"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_broadcast_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="sdf"
            android:textColor="#FF999999"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF2F2F2" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_broadcast_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_mac"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/location"
            android:textColor="#FF323232"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_broadcast_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/list_in"
            android:text="@string/go_setting"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#FFF2F2F2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_broadcast_distance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_broadcast_location"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/distance_of_up_one"
            android:textColor="#FF323232"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_broadcast_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/list_in"
            android:text="@string/go_setting"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_finish_add"
        style="@style/submit_btn_style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:enabled="true"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/add_add"
        android:textSize="16sp" />
</RelativeLayout>