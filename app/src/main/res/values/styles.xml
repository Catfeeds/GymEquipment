<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"></style>

    <!--沉浸式状态栏-->
    <style name="TranslucentTheme" parent="AppTheme"></style>

    <!--全屏显示theme-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--欢迎页的主题-->
    <style name="SpalishTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@drawable/spalish_bg</item>
    </style>


    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--提交按妞style-->
    <style name="submit_btn_style">
        <item name="android:background">@drawable/submit_btn_enable_status_drawable</item>
        <item name="android:textColor">@drawable/submit_btn_text_enbale_status_drawable</item>
    </style>

    <!--反提交按妞style-->
    <style name="unsubmit_btn_style">
        <item name="android:background">@drawable/unsubmit_btn_enable_status_drawable</item>
        <item name="android:textColor">@drawable/submit_btn_text_enbale_status_drawable</item>
    </style>

    <!-- 登录输入框style -->
    <style name="login_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/login_edit_border_selector</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/text_middle</item>
    </style>

    <!--Text style -->
    <style name="me_text_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_middle</item>
    </style>

</resources>
